<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body class="grey lighten-3">
    <div class="container section">
        <div class="flow-text center purple-text"> URL Shortner</div>
        <div class="row">
            <form action="/url" method="POST">
                <div class="input-field center offset-l2 offset-m2 offset-s1 col m8 s7 l8">
                    <input type="text" id="URL" name="URL" required />
                    <label for="URL">Enter URL</label>
                </div>
                <button type="submit" class="btn-floating prefix purple btn-large lighten-2 pulse">Trim</button>
            </form>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <button class="btn-floating red lighten-2 right" type="button" id="clear">X</button>
                <table class="highlight">
                    <thead>
                        <tr>
                            <th>Full Link</th>
                            <th>Short Link</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(link =>{ %>
                            <tr>
                                <td><a href="<%= link.fullURL %>" target="_blank"><%= link.fullURL %></a></td>
                                <td><a href="<%= link.shortURL %>" target="_blank"><%= link.shortURL %></a></td>
                                <td><%= link.totalClicks %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/manage.js"></script>
</body>
</html>